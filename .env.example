# ============================================================================
# FinBuddy Microservices - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=FinBuddy
APP_VERSION=2.0.0
ENVIRONMENT=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///./finbuddy.db

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4

# ============================================================================
# MICROSERVICES PORTS
# ============================================================================
GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
PORTFOLIO_SERVICE_PORT=8002
NEWS_SERVICE_PORT=8003
AI_SERVICE_PORT=8004
RISK_SERVICE_PORT=8005
LEARNING_SERVICE_PORT=8006

# ============================================================================
# MICROSERVICES URLs
# ============================================================================
USER_SERVICE_URL=http://localhost:8001
PORTFOLIO_SERVICE_URL=http://localhost:8002
NEWS_SERVICE_URL=http://localhost:8003
AI_SERVICE_URL=http://localhost:8004
RISK_SERVICE_URL=http://localhost:8005
LEARNING_SERVICE_URL=http://localhost:8006

# ============================================================================
# AI SERVICE - GOOGLE GEMINI (REQUIRED)
# ============================================================================
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================================================
# NEWS SOURCES - API KEYS (OPTIONAL)
# ============================================================================
# Economic Times, Zerodha Pulse, Marketaux work WITHOUT keys!

# NewsAPI: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Finnhub: https://finnhub.io/register
FINNHUB_KEY=your_finnhub_key_here

# GNews: https://gnews.io/register
GNEWS_KEY=your_gnews_key_here

# ============================================================================
# CACHE CONFIGURATION (OPTIONAL)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# ============================================================================
# CORS SETTINGS
# ============================================================================
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# MONITORING
# ============================================================================
ENABLE_NOTIFICATIONS=true
ENABLE_METRICS=false
LOG_LEVEL=INFO

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_URL=http://localhost:8501
STREAMLIT_SERVER_PORT=8501
